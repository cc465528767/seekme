    <style name="OptionArray2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@color/b7</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="OptionArray_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/DarkTextColor</item>
       <!-- <item name="android:fontFamily">@font/fonts</item>-->
        <item name="android:textSize">15dp</item>
    </style>
    <!-- 选项左边是较大图标或图片的样式-->
    <style name="OptionArray_BigImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@color/OptionColor</item>
        <item name="android:padding">8dp</item>
    </style>
    <!--选项中图像大小的样式 100dp-->
    <style name="OptionArray_BigImage.Image">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>
    <!--“我 个人信息 左文字 右图标的样式”-->

    <style name="OptionArray_selfinformation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/b7</item>
        <item name="android:padding">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="OptionArray_selfinformation.Image">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <!-- 左对齐居中30dp选项-->
    <style name="leftcenter">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/DarkTextColor</item>
    </style>
    <!-- 右对齐居中30dp选项-->
    <style name="rightcenter">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">@color/DarkTextColor</item>
    </style>

    <!--存在单选选项的OptionArray的单选样式  向右距离30dp-->
    <style name="Radiobutton_Right">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">30dp</item>
    </style>

