<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/BottomBarColor" >
        <Button
            android:id="@+id/create_notice_backbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@mipmap/arrow_left"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="新建通知"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/send_notice_btn"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:background="@drawable/notice_btn_shape">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="确认发送"
                android:textStyle="bold"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>

    <!--  TODO  发送人  -->
    <LinearLayout
        android:id="@+id/addNoticePeople"
        style="@style/OptionArray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F0FFF0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="添加人员"
                android:textColor="@color/DarkTextColor"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:src="@mipmap/icon_add" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/OptionArray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F0FFF0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="标题："
                android:textColor="@color/DarkTextColor"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">
                <EditText
                    android:id="@+id/edit_notice_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:src="@mipmap/arrow_right" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/OptionArray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F0FFF0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="日程日期："
                android:textColor="@color/DarkTextColor"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">
                <TextView
                    android:id="@+id/edit_noti_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text="2018/01/01"
                    style="@style/NoBold16spDark"
                    android:gravity="center"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/OptionArray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F0FFF0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="日程时间："
                android:textColor="@color/DarkTextColor"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">
                <TextView
                    android:id="@+id/edit_noti_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text="00 : 00"
                    android:gravity="center"
                    style="@style/NoBold16spDark"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0FFF0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="内容："
                android:textColor="@color/DarkTextColor"
                android:textSize="20dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/edit_notify_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F0FFF0"
            android:gravity="start"/>
    </LinearLayout>
</LinearLayout>

