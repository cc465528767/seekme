<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/b6"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="个人运维信息"
            android:textSize="15dp"
            android:textColor="@color/DarkTextColor"
            />
    </RelativeLayout>

    <!--TODO: 轨迹回放 -->
    <LinearLayout
        android:id="@+id/showMyTraceRecord"
        style="@style/OptionArray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:src="@drawable/file" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:text="轨迹回放"
                android:textSize="15dp"
                android:textColor="@color/DarkTextColor"/>
                <!---->


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/MainTextColor"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:src="@mipmap/arrow_right" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <!--TODO: 紧急求救记录 -->
    <LinearLayout
        android:id="@+id/showMySeekRecord"
        style="@style/OptionArray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/b7">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:src="@drawable/file_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="紧急求救记录"
                android:textColor="@color/DarkTextColor"
                android:textSize="15dp" />



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/set_my_nickName"
                    android:text=""
                    android:textColor="@color/MainTextColor"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/set_my_nickName"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:src="@mipmap/arrow_right" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!--TODO: 施救记录 -->
    <LinearLayout
        android:id="@+id/showMyHelpRecord"
        style="@style/OptionArray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/b7">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="wrap_content"

                android:padding="10dp"
                android:src="@drawable/files" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="施救记录"
                android:textSize="15dp"
                android:textColor="@color/DarkTextColor"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/MainTextColor"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:src="@mipmap/arrow_right" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View style="@style/white_line_8dp"/>

    <!-- TODO 监管 -->
    <LinearLayout
        android:id="@+id/manager_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
       <!-- <View style="@style/gray_line_1dp"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="成员运维信息"
                android:textColor="@color/DarkTextColor"
                />
        </RelativeLayout>


        <!--TODO: 成员轨迹跟踪 -->
        <LinearLayout
            android:id="@+id/myMemberTrace"
            style="@style/OptionArray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/b7">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:src="@drawable/location" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="成员轨迹跟踪"
                    android:textSize="15dp"
                    android:textColor="@color/DarkTextColor"
                    />
                    <!--android:textColor="@color/DarkTextColor"-->



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/MainTextColor"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:src="@mipmap/arrow_right" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        <!--TODO: 成员救援记录监控 -->
        <LinearLayout
            android:id="@+id/myMemberHelp"
            style="@style/OptionArray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/b7">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:src="@drawable/location_alt" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="成员救援记录监控"
                    android:textSize="15dp"
                    android:textColor="@color/DarkTextColor"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/MainTextColor"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:src="@mipmap/arrow_right" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

   <!-- <com.zzzealous.seekme.UI.ArrowItemView
        android:id="@+id/arrow_collect"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        app:arrowContent="lala" />-->
</LinearLayout>