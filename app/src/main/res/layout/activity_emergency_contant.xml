<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Title_Mine">
        <TextView
            style="@style/Title_Mine.Text"
            android:text="紧急联系人"/>
    </LinearLayout>
    <View style="@style/white_line_1dp" />
    <View style="@style/gray_line_1dp" />
    <View style="@style/gray_line_1dp" />

    <View style="@style/white_line_25dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="紧急联系人1"
            android:textSize="20dp" />
    </LinearLayout>

    <View style="@style/gray_line_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View style="@style/gray_line_1dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text=""
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/emergency_phone1"
            />
    </LinearLayout>

    <View style="@style/gray_line_1dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="确认"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:id="@+id/emergency_confirm1"
        />

    <View style="@style/white_line_25dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="紧急联系人2"
            android:textSize="20dp" />
    </LinearLayout>

    <View style="@style/gray_line_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/gray_line_1dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text=""
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/emergency_phone2"
            />
    </LinearLayout>

    <View style="@style/gray_line_1dp" />
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="确认"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:id="@+id/emergency_confirm2"
        />


</LinearLayout>
