<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FDF5E6">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- TODO 个人信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">
            <!-- TODO 姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="姓名："
                    style="@style/NoBold16spDark"/>
                <TextView
                    android:id="@+id/detailDialogName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/NoBold16spDark"
                    android:text="小王"/>
            </LinearLayout>

            <!-- TODO 电话-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="电话："
                    style="@style/NoBold16spDark"/>
                <TextView
                    android:id="@+id/detailDialogPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/NoBold16spDark"
                    android:text="13222"/>
            </LinearLayout>

            <!-- TODO 工号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="工号："
                    style="@style/NoBold16spDark"/>

                <TextView
                    android:id="@+id/detailDialogJobNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/NoBold16spDark"
                    android:text="110-1-2"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDetailDialogPositive"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_item_to_alpha"
                android:padding="15dp"
                android:text="拨打电话"
                android:textSize="16dp"
                android:textColor="#000"
                />


            <Button
                android:id="@+id/btnDetailDialogNegative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_item_to_alpha"
                android:padding="15dp"
                android:text="取消"
                android:textSize="16dp"
                android:textColor="#000"
                android:visibility="visible"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>